		<style>
		@font-face {
			font-family: 'SUITE-Regular';
			src: url('https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_2304-2@1.0/SUITE-Regular.woff2') format('woff2');
			font-weight: 400;
			font-style: normal;
		}

		h1, h2, h3, h4, h5, h6 {
			font-family: 'SUITE-Regular', Arial, sans-serif;
		}

		body {
			font-family: 'SUITE-Regular', Arial, sans-serif;
		}

		.register_head_style {
			font-weight: bold;
		}	
		/* 테이블 행 높이	 */
		table td {
			padding: 0.5em 0.75em;
		}	
		
		.table_head_style {
			font-size: 1.3em;
		}	

		/* 테이블 기본 가운데정렬	 */
		#summarySheet {
			text-align: center;
		}

		/* 테이블 기본 가운데정렬	 */	
		#summarySheet th,
		#summarySheet td {
			text-align: center;
		}
		
		/* 금액 오른쪽정렬 */
		#summarySheet .align_right {
			text-align: right; 
			padding-right: 130px;
		}
		
		/* 기본색상 : 회색 */
		#main table tbody tr {
			border-color: #dddddd;
		}	
			
		/* 기본색상 : 회색 / 합계부분만 색상 다르게하기 */
		#main table tbody tr:nth-child(2n + 1):not(.row_sum) {
			background-color: rgba(222, 222, 222, 0.25);
		}	
			
		/* 합계부분 연한보라색 배경색으로	 */
		#summarySheet tr.row_sum,
		#main table tbody tr.row_sum {
			background-color: #cdb1cb;
		}
	
		/* 전체합계부분 진한 보라색 배경색으로 */
		#summarySheet tr.row_total_sum td {
			color: #fff; 
			background-color: #5f4d93;	
		}
		
		/* 날짜선택 시 안내문구 */
		.date_style {
			font-weight: bold;
			font-size: 1.2em;
		}

		/* 상단 검색버튼 */
		#main input[type="submit"],
		#main input[type="reset"],
		#main input[type="button"],
		#main button,
		#main .button {
			background-color: #cdb1cb;
			border: none; 
			box-shadow: none;
			color: #636363 !important; 
			font-weight: bold;
		}

		#main input[type="submit"]:hover,
		#main input[type="reset"]:hover,
		#main input[type="button"]:hover,
		#main button:hover,
		#main .button:hover {
		  background-color: #d7c1d6;
		}
			
		#startDateInput {
		  border: 0.5px solid #ddd;
		}

		#endDateInput {
		  border: 0.5px solid #ddd;
		}
			
		form {
			display: flex;
			align-items: center;
			justify-content: center;
		}

		.date_style {
			margin-right: 10px;
		}

		input[type="text"] {
			flex: 1;
		}

		.btn {
			margin-left: 10px;
		}		
			
		</style>
		
		<%-include('common/headnavbar.ejs')%>
		
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
		
		<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
		<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
		<script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>

	</head>
	<body class="is-preload">

		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Header -->
					<header id="header">
						<hr>
						<h1 class="register_head_style">집계표</h1>
						<br>
					</header>

				<!-- Main -->
					<div id="main">

						<!-- Get Started -->
							<section id="cta" class="main special">
								
								<header class="major">
									<h3 class="register_head_style">매출 현황</h3>
								</header>
								
								<body>
									
								<form>
									<label for="startDateInput" class="date_style" style="margin-left: 100px;">시작일</label>
									<input type="text" id="startDateInput" name="startDateInput">

									<label for="endDateInput" class="date_style" style="margin-left: 30px;">종료일</label>
									<input type="text" id="endDateInput" name="endDateInput">

									&ensp;&ensp;<button id="searchButton" class="btn btn-purple" type="submit" style="margin-right: 100px;">검색</button>
								</form>
								
								<p id="dateRangeDisplay" style="margin-top: -20px; margin-bottom: 50px;"></p>	
									
								<table id="summarySheet">
	
									<!-- 제목 줄 -->
									<thead width="100%">
										<tr class="table_head_style">
											<th width="20%">일련번호</th>
											<th width="40%">날짜</th>
											<th width="40%">금액</th>
										</tr>
									</thead>	
									
									<!-- 내용 -->
									<tbody>
										<%
										function number_format(inputNumber) {
											return inputNumber.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
										}

										let current_month = ''; // 현재 월
										let monthly_total_index = 0; // 월별 총계 인덱스
										let total_sum = 0; 
										let counter = 1; // 일련번호
										
										for (let index = 0; index < rows.length; index++) {
											let row = rows[index];
											let row_date = new Date(row.date);
											let row_month = row_date.toLocaleString('default', { month: 'short' }); // 날짜를 월 이름으로 포맷

											// 새로운 월이 시작되었는지 확인
											if (row_month !== current_month) {
												if (current_month !== '') {
												  %>
												  <tr class="row_sum">
													<td></td>
													<td><%= current_month %> 합계</td>
													<td class="align_right"><%= number_format(monthly_total[monthly_total_index].total) %></td>
												  </tr>
												  <% monthly_total_index++;
												}
												current_month = row_month;
											}
											%>
											<tr>
											<td><%= counter %></td>
											<td><%= row_date.toLocaleDateString() %></td>
											<td class="align_right"><%= number_format(row.money) %></td>
											</tr>
											<%
											total_sum += row.money;
											counter++;
										} // --for
										
										// 마지막 월의 총계 출력
										if (current_month !== '' && monthly_total_index < monthly_total.length) { %>
										<tr class="row_sum">
											<td></td>
											<td><%= current_month %> 합계</td>
											<td class="align_right"><%= number_format(monthly_total[monthly_total_index].total) %></td>
										</tr>
										<% monthly_total_index++;
											}
										%>
										
										<tr class="row_total_sum">
										  <td></td>
										  <td>전체 합계</td>
										  <td class="align_right"><%= number_format(total_sum) %></td>
										</tr>
										</tbody>
									</table>
								
								</body>

							</section>
					</div>

			<%-include('common/footer.ejs')%>

			</div>
		
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

	</body>
	
	<script>
	$(function() {
		let startDateInput = $('#startDateInput');
		let endDateInput = $('#endDateInput');

		// 입력 초기화
		startDateInput.datepicker();
		endDateInput.datepicker();

		// 검색 버튼 이벤트 리스너
		$('#searchButton').click(function(event) {
			event.preventDefault();

			// 날짜 검색하여 받아오기
			let startDate = startDateInput.datepicker('getDate');
			let endDate = endDateInput.datepicker('getDate');

			// 날짜 포맷 형식 변경
			let formattedStartDate = startDate.toLocaleDateString('en-GB');
			let formattedEndDate = endDate.toLocaleDateString('en-GB');			
			
			console.log('시작일 :: ', formattedStartDate);
			console.log('종료일 :: ', formattedEndDate);
			
			let submit_args = '';
			submit_args += commonFunc.makeArgs("startDate", formattedStartDate);
			submit_args += commonFunc.makeArgs("endDate", formattedEndDate);
			const ret = commonFunc.postArgs("/summarySheet_search", submit_args);

			if (ret === 'ok'){
				alert('등록이 완료 되었습니다.');
				customer_add.reset(); // 페이지 초기화
				$('#addModal').modal('hide');
				view_dataTable();
				view_txt_message("data_validation", "", "red");
			} else {
				alert('등록에 실패하였습니다. 정보를 다시 확인해주세요.');
				view_txt_message("data_validation", "", "red");
			}	
			
			
			
			
		});

    });

	</script>
</html>